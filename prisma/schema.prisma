generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  previewFeatures = ["fullTextSearchPostgres", "nativeDistinct", "postgresqlExtensions", "relationJoins", "schemaEngineDriverAdapters", "shardKeys", "strictUndefinedChecks", "views"]
  engineType      = "binary"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id            String         @id @default(uuid())
  kindeId       String         @unique
  email         String?         @unique
  contact       String?
  fullName      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  addresses     Address[]
  kyc           KycProfile?
  sellerProfile SellerDetails?
}

model KycProfile {
  id                String       @id @default(uuid())
  status            KycStatus    @default(PENDING)
  fullName          String
  dateOfBirth       DateTime
  nationality       String
  documentType      DocumentType?
  idDocumentNumber  String?       @unique
  idDocumentUrl     String?
  proofOfAddressUrl String?
  selfieUrl         String?
  rejectionReason   String?
  reviewedBy        String?
  verifiedAt        DateTime?
  accountId         String       @unique
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  account           Account      @relation(fields: [accountId], references: [kindeId])
}

model SellerDetails {
  id           String   @id @default(uuid())
  companyName  String
  taxId        String?
  rating       Decimal  @default(0.0)
  totalSales   Int      @default(0)
  accountId    String   @unique
  responseRate Decimal? @default(0.0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  account      Account  @relation(fields: [accountId], references: [kindeId])
}

model Address {
  id        String   @id @default(uuid())
  recipientname String
  phone String
  label     String?
  street    String
  city      String
  state     String
  zipCode   String
  country   String
  accountId String
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  account   Account  @relation(fields: [accountId], references: [kindeId])
}

model Category {
  id          String     @id @default(uuid())
  slug        String     @unique
  name        String
  description String?
  icon        String?
  parentId    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]

  @@index([slug])
  @@index([parentId])
}

model Product {
  id             String                   @id @default(uuid())
  title          String
  description    String
  categoryId     String
  condition      ProductCondition         @default(GOOD)
  images         String[]
  startingPrice  Decimal                  @db.Decimal(10, 2)
  currentBid     Decimal                  @db.Decimal(10, 2)
  bidsCount      Int                      @default(0)
  reservePrice   Decimal?                 @db.Decimal(10, 2)
  buyNowPrice    Decimal?                 @db.Decimal(10, 2)
  startDate      DateTime                 @default(now())
  endDate        DateTime
  isActive       Boolean                  @default(true)
  sellerId       String
  sellerName     String
  sellerRating   Decimal                  @default(0.0) @db.Decimal(3, 2)
  rating         Decimal                  @default(0.0) @db.Decimal(3, 2)
  reviewCount    Int                      @default(0)
  specifications Json
  createdAt      DateTime                 @default(now())
  updatedAt      DateTime                 @updatedAt
  search_vector  Unsupported("tsvector")?
  category       Category                 @relation(fields: [categoryId], references: [id])
  auctions       Auction[]

  @@index([categoryId, isActive, endDate(sort: Desc)])
  @@index([sellerId, isActive])
  @@index([isActive, endDate])
  @@index([isActive, currentBid(sort: Desc)])
  @@index([isActive, createdAt(sort: Desc)])
  @@index([condition, isActive])
  @@index([title])
  @@index([startingPrice, currentBid])
  @@index([search_vector], type: Gin)
}

model Auction {
  id               String        @id @default(uuid())
  productId        String
  title            String
  description      String
  prizeValue       Decimal       @db.Decimal(10, 2)
  entryFee         Decimal       @db.Decimal(10, 2)
  startDate        DateTime      @default(now())
  endDate          DateTime
  status           AuctionStatus @default(ACTIVE)
  winnerId         String?
  winningBidAmount Decimal?      @db.Decimal(10, 2)
  totalBidsCount   Int           @default(0)
  totalRevenue     Decimal       @default(0.0) @db.Decimal(10, 2)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  product          Product       @relation(fields: [productId], references: [id])
  bids             Bid[]

  @@index([status, endDate])
  @@index([productId])
  @@index([winnerId])
}

model Bid {
  id          String   @id @default(uuid())
  auctionId   String
  bidderId    String
  bidderName  String
  bidAmount   Decimal  @db.Decimal(10, 2)
  isUnique    Boolean  @default(true)
  isWinning   Boolean  @default(false)
  placedAt    DateTime @default(now())
  auction     Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)

  @@unique([auctionId, bidderId])
  @@index([auctionId, bidAmount])
  @@index([auctionId, isUnique, bidAmount])
  @@index([bidderId])
}

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
  NEEDS_MORE_INFO
}

enum DocumentType {
  NATIONAL_ID
  PASSPORT
  DRIVERS_LICENSE
  SELFIE
  PROOF_OF_ADDRESS
}

enum ProductCondition {
  MINT
  EXCELLENT
  GOOD
  FAIR
  NEW
}

enum AuctionStatus {
  ACTIVE
  ENDED
  CANCELLED
  WINNER_DETERMINED
}
