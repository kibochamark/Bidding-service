generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  previewFeatures = ["fullTextSearchPostgres", "nativeDistinct", "postgresqlExtensions", "relationJoins", "schemaEngineDriverAdapters", "shardKeys", "strictUndefinedChecks", "views"]
  engineType      = "binary"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id            String         @id @default(uuid())
  kindeId       String         @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  addresses     Address[]
  kyc           KycProfile?
  sellerProfile SellerDetails?
}

model KycProfile {
  id              String    @id @default(uuid())
  userId          String    @unique
  status          KycStatus @default(PENDING)
  idDocumentUrl   String
  selfieUrl       String?
  rejectionReason String?
  reviewedBy      String?
  verifiedAt      DateTime?
  accountId       String    @unique
  account         Account   @relation(fields: [accountId], references: [kindeId])
}

model SellerDetails {
  id           String   @id @default(uuid())
  companyName  String
  taxId        String?
  rating       Decimal  @default(0.0)
  totalSales   Int      @default(0)
  accountId    String   @unique
  responseRate Decimal? @default(0.0)
  account      Account  @relation(fields: [accountId], references: [kindeId])
}

model Address {
  id        String  @id @default(uuid())
  userId    String
  label     String?
  street    String
  city      String
  zipCode   String
  country   String
  accountId String
  account   Account @relation(fields: [accountId], references: [kindeId])
}

model Category {
  id          String     @id @default(uuid())
  slug        String     @unique
  name        String
  description String?
  icon        String?
  parentId    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  parent      Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]

  @@index([slug])
  @@index([parentId])
}

model Product {
  id             String           @id @default(uuid())
  title          String
  description    String
  categoryId     String
  condition      ProductCondition @default(GOOD)
  images         String[]
  startingPrice  Decimal          @db.Decimal(10, 2)
  currentBid     Decimal          @db.Decimal(10, 2)
  bidsCount      Int              @default(0)
  reservePrice   Decimal?         @db.Decimal(10, 2)
  buyNowPrice    Decimal?         @db.Decimal(10, 2)
  startDate      DateTime         @default(now())
  endDate        DateTime
  isActive       Boolean          @default(true)
  sellerId       String
  sellerName     String
  sellerRating   Decimal          @default(0.0) @db.Decimal(3, 2)
  rating         Decimal          @default(0.0) @db.Decimal(3, 2)
  reviewCount    Int              @default(0)
  specifications Json
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  category       Category         @relation(fields: [categoryId], references: [id])

  @@index([categoryId, isActive, endDate(sort: Desc)])
  @@index([sellerId, isActive])
  @@index([isActive, endDate])
  @@index([isActive, currentBid(sort: Desc)])
  @@index([isActive, createdAt(sort: Desc)])
  @@index([condition, isActive])
  @@index([title])
  @@index([startingPrice, currentBid])
}

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
  NEEDS_MORE_INFO
}

enum ProductCondition {
  MINT
  EXCELLENT
  GOOD
  FAIR
  NEW
}
